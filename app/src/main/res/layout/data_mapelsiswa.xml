<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvMapelSiswa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="@dimen/dimen10">

        <TextView
            android:id="@+id/tv_mapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen18"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            tools:text="Nama Pelajaran" />

        <TextView
            android:id="@+id/tv_jenisMapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mapel"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen13"
            android:layout_marginBottom="@dimen/dimen5"
            tools:text="Jenis Pelajaran" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jenisMapel"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen15"
            android:textStyle="bold"
            tools:text="Guru Pengajar" />

        <TextView
            android:id="@+id/tv_nip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen8"
            tools:text="NIP Guru" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10">

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen18"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            tools:text="Deskripsi Soal Yang Di Upload" />

        <TextView
            android:id="@+id/tv_mapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deskripsi"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen15"
            android:textStyle="bold"
            tools:text="Mata Pelajaran" />

        <TextView
            android:id="@+id/tv_jenisMapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mapel"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen10"
            tools:text="Kategori Mapel" />

        <TextView
            android:id="@+id/tv_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jenisMapel"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen12"
            android:textStyle="italic"
            tools:text="Dibuat pada : " />

        <TextView
            android:id="@+id/tv_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_create"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen12"
            android:textStyle="italic"
            tools:text="Waktu Pengerjaan : " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_waktu"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnKerjakanSoal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_waktu"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_marginBottom="@dimen/dimen10"
                android:text="Kerjakan Soal"
                style="@style/Widget.AppCompat.Button.Colored"/>
            <Button
                android:id="@+id/btnHasil"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen8"
                android:layout_marginBottom="@dimen/dimen10"
                android:text="Peringkat"
                style="@style/Widget.AppCompat.Button.Colored"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>